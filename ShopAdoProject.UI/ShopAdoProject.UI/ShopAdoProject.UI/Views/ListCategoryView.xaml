<UserControl x:Class="ShopAdoProject.UI.Views.ListCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopAdoProject.UI.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:ShopAdoProject.UI.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800" 
             DataContext="{Binding Source={StaticResource locator}, Path=ListCategoryViewModel}">


    <Grid>
        <DataGrid ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  Grid.Column="1"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название категории" Binding="{Binding CategoryName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
